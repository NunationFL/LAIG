            <!-- enable/disable -->
            <position x="0" y="3" z="0" w="0" /><!-- light position; w=1: point light; w=0: directional light -->
            <ambient r="0.5" g="0.5" b="0.5" a="1.0" />                   <!-- ambient component -->
